@model Brands
@{
    ViewData["Title"] = "Silo Comunicaciones - Gestión Web";
}

<h2>Agregar una marca</h2>

<form method="POST">
    <div class="form-group">
        <label asp-for="VcBrandName" class="form-control">Nombre de la Marca:</label>
        <input type="text" asp-for="VcBrandName">
    </div>
    <div class="form-group">
        <label asp-for="VcBrandDesc" class="form-control">Nombre de la Marca:</label>
        <input type="text" asp-for="VcBrandDesc">
    </div>
    <input type="submit" value="Guardar"/>
</form>