@model List<Brands>
@{
    ViewData["Title"] = "Silo Comunicaciones - Gestión Web";
}

<h2>Marcas</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Marca</th>
            <th scope="col">Descripción</th>
            <th scope="col">Editar</th>
            <th scope="col">Eliminar</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var brand in @Model)
        {
            <tr>
                <th scope="row">@brand.BrandId</th>
                <td>@brand.VcBrandName</td>
                <td>@brand.VcBrandDesc</td>
                <td><a href="~/../Marca/EditarMarca/@brand.BrandId">Editar</a></td>
                <td><a href="~/../Marca/BorrarMarca/@brand.BrandId">Eliminar</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div>
    <a href="~/../Brand/CrearBrand/">Agregar una marca</a>
</div>