@model List<Informatico>
@{
    ViewData["Title"] = "Silo Comunicaciones - Gestión Web";
}

<h2>Dispositivos</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Producto</th>
                <th scope="col">Tipo</th>
                <th scope="col">Brands</th>
                <th scope="col">Proveedor</th>
                <!-- 
                Falta agregar el atributo Cantidad
                <th scope="col">Cantidad</th>
                -->
                <th scope="col">Estado</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>

            </tr>
        </thead>
        <tbody>
        @foreach (var informatico in @Model)
        {
            <tr>
                <th scope="row">@informatico.InformId</th>
                <td>@informatico.InformDesc</td>
                <td>@ViewBag.Context.InformTips.Find(@ViewBag.Context.Productos.Find(@informatico.InformId).InformTipId).VcInformNom</td>
                <td>@ViewBag.Context.Marcas.Find(@ViewBag.Context.Productos.Find(@informatico.InformId).MarcaId).VcMarcaName</td>
                <t>@ViewBag.Context.Proveedores.Find(@ViewBag.Context.Productos.Find(@informatico.InformId).ProveedorId).VcProvName</t>
                <td>@informatico.VcInforStatus</td>
                <td><a href="~/../Informatico/EditarInformatico/@informatico.InformId">Editar</a></td>
                <td><a href="~/../Informatico/BorrarInformatico/@informatico.InformId">Eliminar</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div>
    <a href="~/../Informatico/CrearInformatico/">Agregar nuevo elemento Informático</a>
</div>